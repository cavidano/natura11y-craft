{% do craft.app.response.headers.set('Content-Type', 'text/css') %}

:root {
    {# Theme Colors #}
    {% set themeColors = craft.app.globals.getSetByHandle('themeColors') %}

    {% if themeColors.primaryColor %}--primary: {{ themeColors.primaryColor.hex }};{% endif %}
    {% if themeColors.primaryText %}--primary-text: {{ themeColors.primaryText.hex }};{% endif %}
    {% if themeColors.primaryBorder %}--primary-border: {{ themeColors.primaryBorder.hex }};{% endif %}
    {% if themeColors.primaryLink %}--primary-link: {{ themeColors.primaryLink.hex }};{% endif %}
    {% if themeColors.primaryConfirm %}--primary-confirm: {{ themeColors.primaryConfirm.hex }};{% endif %}
    {% if themeColors.primaryWarn %}--primary-warn: {{ themeColors.primaryWarn.hex }};{% endif %}

    {% if themeColors.secondaryColor %}--secondary: {{ themeColors.secondaryColor.hex }};{% endif %}
    {% if themeColors.secondaryText %}--secondary-text: {{ themeColors.secondaryText.hex }};{% endif %}
    {% if themeColors.secondaryBorder %}--secondary-border: {{ themeColors.secondaryBorder.hex }};{% endif %}
    {% if themeColors.secondaryLink %}--secondary-link: {{ themeColors.secondaryLink.hex }};{% endif %}
    {% if themeColors.secondaryConfirm %}--secondary-confirm: {{ themeColors.secondaryConfirm.hex }};{% endif %}
    {% if themeColors.secondaryWarn %}--secondary-warn: {{ themeColors.secondaryWarn.hex }};{% endif %}

    {% if themeColors.darkColor %}--dark: {{ themeColors.darkColor.hex }};{% endif %}
    {% if themeColors.darkText %}--dark-text: {{ themeColors.darkText.hex }};{% endif %}
    {% if themeColors.darkBorder %}--dark-border: {{ themeColors.darkBorder.hex }};{% endif %}
    {% if themeColors.darkLink %}--dark-link: {{ themeColors.darkLink.hex }};{% endif %}
    {% if themeColors.darkConfirm %}--dark-confirm: {{ themeColors.darkConfirm.hex }};{% endif %}
    {% if themeColors.darkWarn %}--dark-warn: {{ themeColors.darkWarn.hex }};{% endif %}
    
    {% if themeColors.lightColor %}--light: {{ themeColors.lightColor.hex }};{% endif %}
    {% if themeColors.lightText %}--light-text: {{ themeColors.lightText.hex }};{% endif %}
    {% if themeColors.lightBorder %}--light-border: {{ themeColors.lightBorder.hex }};{% endif %}
    {% if themeColors.lightLink %}--light-link: {{ themeColors.lightLink.hex }};{% endif %}
    {% if themeColors.lightConfirm %}--light-confirm: {{ themeColors.lightConfirm.hex }};{% endif %}
    {% if themeColors.lightWarn %}--light-warn: {{ themeColors.lightWarn.hex }};{% endif %}
    
    {% if themeColors.canvasColor %}--canvas: {{ themeColors.canvasColor.hex }};{% endif %}
    {% if themeColors.canvasText %}--canvas-text: {{ themeColors.canvasText.hex }};{% endif %}
    {% if themeColors.canvasBorder %}--canvas-border: {{ themeColors.canvasBorder.hex }};{% endif %}
    {% if themeColors.canvasLink %}--canvas-link: {{ themeColors.canvasLink.hex }};{% endif %}
    {% if themeColors.canvasConfirm %}--canvas-confirm: {{ themeColors.canvasConfirm.hex }};{% endif %}
    {% if themeColors.canvasWarn %}--canvas-warn: {{ themeColors.canvasWarn.hex }};{% endif %}

    {# Typography #}
    {% set themeFonts = craft.app.globals.getSetByHandle('typography') %}

    {# Font Family #}
    {% if themeFonts.bodyFontFamily %}--body-font-family: {{ themeFonts.bodyFontFamily|raw }};{% endif %}
    {% if themeFonts.headerFontFamily %}--header-font-family: {{ themeFonts.headerFontFamily|raw }};{% endif %}
    {% if themeFonts.buttonFontFamily %}--button-font-family: {{ themeFonts.buttonFontFamily|raw }};{% endif %}
}